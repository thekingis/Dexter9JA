<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <com.dexter9ja.android.Views.CornerBorderTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/welcomeTextView"
                app:borderRadius="12"
                android:background="@color/primaryFade"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_marginBottom="50dp" />

            <com.dexter9ja.android.Views.CornerBorderRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryFade"
                android:paddingHorizontal="10dp"
                app:borderRadius="20"
                android:layout_marginBottom="20dp"
                android:paddingVertical="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="30dp"
                    android:paddingEnd="35dp"
                    android:gravity="end"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="@string/courses_to_do"
                    android:padding="5dp"
                    android:layout_centerVertical="true"
                    tools:ignore="RtlSymmetry" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/coding"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/todo" />

                <com.dexter9ja.android.Views.RoundRelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/primary"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    tools:ignore="RelativeOverlap">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:text="7"/>

                </com.dexter9ja.android.Views.RoundRelativeLayout>

            </com.dexter9ja.android.Views.CornerBorderRelativeLayout>

            <com.dexter9ja.android.Views.CornerBorderRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orangeFade"
                android:paddingHorizontal="10dp"
                app:borderRadius="20"
                android:layout_marginBottom="20dp"
                android:paddingVertical="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orange"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="30dp"
                    android:paddingEnd="35dp"
                    android:gravity="end"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="@string/completed_courses"
                    android:padding="5dp"
                    android:layout_centerVertical="true"
                    tools:ignore="RtlSymmetry" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/completed"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/todo" />

                <com.dexter9ja.android.Views.RoundRelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/orange"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    tools:ignore="RelativeOverlap">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:text="2"/>

                </com.dexter9ja.android.Views.RoundRelativeLayout>

            </com.dexter9ja.android.Views.CornerBorderRelativeLayout>

            <com.dexter9ja.android.Views.CornerBorderRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pinkFade"
                android:paddingHorizontal="10dp"
                app:borderRadius="20"
                android:layout_marginBottom="20dp"
                android:paddingVertical="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pink"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="30dp"
                    android:paddingEnd="35dp"
                    android:gravity="end"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="@string/task_to_complete"
                    android:padding="5dp"
                    android:layout_centerVertical="true"
                    tools:ignore="RtlSymmetry" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/task"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/todo" />

                <com.dexter9ja.android.Views.RoundRelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/pink"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    tools:ignore="RelativeOverlap">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:text="55"/>

                </com.dexter9ja.android.Views.RoundRelativeLayout>

            </com.dexter9ja.android.Views.CornerBorderRelativeLayout>

            <com.dexter9ja.android.Views.CornerBorderLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/skyBlueFade"
                android:paddingHorizontal="10dp"
                app:borderRadius="20"
                android:weightSum="2"
                android:layout_marginBottom="20dp"
                android:paddingBottom="30dp">
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bounceView"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/badge4"
                            android:contentDescription="@string/todo" />

                        <com.dexter9ja.android.Views.CornerBorderTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/blackFade"
                            app:borderRadius="7"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:text="71"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="12dp"
                            android:layout_marginEnd="40dp"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>

                    <com.dexter9ja.android.Views.CornerBorderButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/skyBlue"
                        app:borderRadius="12"
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="15dp"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:text="@string/see_awards" />
                    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/swingView"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/cert"
                            android:contentDescription="@string/todo" />

                        <com.dexter9ja.android.Views.CornerBorderTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/blackFade"
                            app:borderRadius="7"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:text="2"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="12dp"
                            android:layout_marginEnd="40dp"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>

                    <com.dexter9ja.android.Views.CornerBorderButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/skyBlue"
                        app:borderRadius="12"
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="15dp"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:text="@string/see_certificates" />

                </LinearLayout>

            </com.dexter9ja.android.Views.CornerBorderLinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recent_courses"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginVertical="10dp" />

            <com.dexter9ja.android.Views.CornerBorderRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryFade"
                app:borderRadius="20"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:src="@drawable/blog_1"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@string/todo" />
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="19sp"
                            android:textColor="@color/black"
                            android:text="" />

                    </LinearLayout>

                </LinearLayout>

            </com.dexter9ja.android.Views.CornerBorderRelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>